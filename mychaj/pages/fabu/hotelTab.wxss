.hotel-tab{
  margin-top: 143rpx;
  position: relative;
  overflow: hidden;
}
.tab-wrap .tab{
  flex:1;
  font-size: 28rpx;
  color: #4A4A4A;
  text-align:center;
  padding-top:32rpx;
}
.tab-wrap .tab-checked{
  color: #F096B4;
}
.tab-wrap .line{
  position: absolute;
  bottom: 40rpx;
  left: 0rpx;
  width:30rpx;
  height:5rpx;
  background: #F096B4;
  border-radius: 4rpx;
  margin:6rpx auto 0rpx;
  transition: all ease-in-out .2s;
}

.box{
  padding:60rpx 87rpx 163rpx;
}
