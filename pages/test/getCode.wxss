/*手机号绑定  */

page {
  height: 100%;
  background-color: #f4f4f4;
}
.setUplogin {
  width: 100%;
}
.telephoneBody {
  min-height: 266rpx;
  margin-top: 20rpx;
  background-color: #fff;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  font-size: 34rpx;
}

.incommonStyle {
  width: 96%;
  line-height: 88rpx;
  margin-left: 30rpx;
}

.incommonStyle .numTxt {
  min-width: 136rpx;
  margin-right: 44rpx;
}

.incommonStyle input {
  display: block;
  height: 88rpx;
  line-height: 88rpx;
}
.minvalidatSection .yzmCode {
  width: 170rpx;
}

.bindingTel {
  position: relative;
  border-bottom: 1rpx solid #e5e5e5;
}

.validateNum {
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
}

.minvalidatSection {
  display: flex;
  flex-direction: row;
  position: relative;
}

button[class="getvalidateCode"]::after {
  border: 0;
} 
button[class="saveBt"]::after {
  border: 0;
} 
.minvalidatSection .getvalidateCode {
  border: none;
  background: none;
  outline: none;
  -webkit-appearance: none;
  height: 88rpx;
  min-width: 160rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #f06e5e;
  letter-spacing: 0;
}
.saveBt {
  border: none;
  background: none;
  outline: none;
  background: #F06E5E;
  -webkit-appearance: none;
  height: 88rpx;
  width: 89.333%;
  margin: 0 auto;
  margin-top: 102rpx;
  font-family: PingFangSC-Regular;
  border-radius:10rpx;
  font-size: 36rpx;
  color: #fff;
}


.bindingTel .msg-err {
  position: absolute;
  top: 0;
  left: 262rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 46rpx;
  background-image: url('http://test-1251500528.file.myqcloud.com/hzpwechartapp/icon-warn.png');
  background-size: 28rpx 28rpx;
  background-position: left center;
  background-repeat: no-repeat;
  font-size: 14px;
  color: #F06E5E;
  letter-spacing: 0;
  text-align: left;
}

.minvalidatSection .btn-code {
  position: absolute;
  display: block;
  top: 0;
  right: 40rpx;
  width:240rpx;
  height: 100%;
  font-size: 16px;
  color: #F06E5E;
  text-align: right;
}
.information-item-right{
  width: 100%;
  height: 60rpx;
}
